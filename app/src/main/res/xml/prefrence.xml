<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="prefrence_settings"
    >

    <ListPreference
        android:title="Country"
        android:key="country"
        android:defaultValue="us"
        android:entries="@array/country_entries"
        android:entryValues="@array/country_values"
        android:summary="%s"
        />


    <PreferenceCategory
        android:title="@string/search"
        >
        <ListPreference
            android:key="search"
            android:title="@string/sortby"
            android:defaultValue="publishedAt"
            android:entryValues="@array/search_values"
            android:entries="@array/search_entries"
            android:summary="%s"/>
    </PreferenceCategory>
</PreferenceScreen>